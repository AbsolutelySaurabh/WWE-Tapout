<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    tools:context="thegenuinegourav.wwetapout.GamePlayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="WINNER"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            android:clickable="false"
            android:visibility="invisible"
            android:background="@android:color/transparent"
            android:id="@+id/who_is_wining_status"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5.5">
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/winnerVideo"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:visibility="invisible"
                android:layout_centerInParent="true" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:id="@+id/top_right_star"
                android:visibility="invisible"
                android:src="@drawable/stars"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/bottom_right_star"
                android:visibility="invisible"
                android:src="@drawable/stars"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:id="@+id/top_left_star"
                android:src="@drawable/stars"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:layout_marginBottom="15dp"
                android:id="@+id/bottom_left_star"
                android:src="@drawable/stars"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:src="@drawable/aj"
                android:visibility="invisible"
                android:id="@+id/winner_image" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="0.4"
                android:src="@drawable/aj"
                android:visibility="invisible"
                android:id="@+id/loser_image" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="7dp"
            android:id="@+id/tap_to_continue"
            android:text="Exit"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"/>

    </LinearLayout>

    <com.yalantis.starwars.TilesFrameLayout
        android:id="@+id/tiles_frame_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:sw_animationDuration="1500"
        app:sw_numberOfTilesX="35">

